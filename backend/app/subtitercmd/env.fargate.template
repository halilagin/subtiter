# Fargate Environment Configuration
# This file should be copied from .env.local and customized for Fargate deployment
# DO NOT commit sensitive values to git - use AWS Secrets Manager or Parameter Store

# API Configuration
WEBAPP_API_HOST=localhost
WEBAPP_API_PORT=22081

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Email Configuration
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password
EMAIL_INTERVAL_SECONDS=60
EMAIL_SENDER_NAME=Subtiter AI
EMAIL_SENDER_EMAIL=noreply@subtiter.ai
ACTIVATE_EMAIL_SENDING=true

# Signing
SIGNING_CALLBACK_URL=https://your-domain.com/callback
SIGNING_CALLBACK_URL_SIGNED_PDF_VIEW=https://your-domain.com/view
ACTIVATE_SIGNING_PDF=true

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_DEFAULT_CURRENCY=usd
STRIPE_PAY_AS_YOU_GO_PRODUCT_ID=prod_xxx
STRIPE_METERED_PRODUCT_ID=prod_xxx
STRIPE_MONTHLY_PRODUCT_ID=prod_xxx
STRIPE_PAY_AS_YOU_GO_PRICE=100
ACTIVATE_STRIPE_METERING=true

# Database Backup
ACTIVATE_PSQL_BACKUP=false
DB_BACKUP_CONTAINER_NAME=postgres
DB_BACKUP_DB_NAME=subtiter
DB_BACKUP_DB_USER=postgres
DB_BACKUP_DIR=/backups
DB_BACKUP_DATE_FORMAT=%Y-%m-%d_%H-%M-%S
DB_BACKUP_FILE=subtiter_backup
DB_BACKUP_DAYS_TO_KEEP=7
DB_BACKUP_S3_BUCKET_NAME=subtiter-backups

# Video Processing Configuration
VIDEO_WAREHOUSE_ROOT_DIR=/app/subtiter_warehouse
BACKEND_WORKING_DIR=/app
SEGMENT_COUNT=3
SUBTITER_RUN_SCRIPT=/app/run.sh
SUBTITER_CMD_CLIPPER_PY=/app/clipper.py

# Subtiter Configuration Levels
subtiter_level1=basic
subtiter_level2=intermediate
subtiter_level3=advanced

# API Keys
OPENAI_API_KEY=sk-your-openai-key
DEEPGRAM_API_KEY=your-deepgram-key

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1

# OAuth
GOOGLE_CLIENT_ID=your-google-client-id
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Task-specific (will be overridden by TASK_INPUT)
USER_ID=
VIDEO_ID=
DO_DB_OPERATION=true
SEND_CHAT=true
MOCK_PROCESS=false

