version: '3.8'

services:
  fastapi-app:
    container_name: subtiter-fastapi-app
    build:
      context: ./backend
      dockerfile: Dockerfile.prod
    ports:
      - "4081:4081"
    volumes:
      - ./backend:/app
    environment:
      - PYTHONPATH=/app
      - DATABASE_URL=postgresql://subtiteruser_prod:subtiter_qazwsxqazwsx_prod@subtiter-postgres-db-prod:5433/subtiter_prod
    restart: unless-stopped
    depends_on:
      - postgres_db
    networks:
      - app_network
  nodejs-app:
    container_name: subtiter-nodejs-app
    build:
      context: ./frontend
      dockerfile: Dockerfile.prod
    restart: always
    ports:
      - "4080:4080"
      - "4443:4443"
    networks:
      - app_network

  postgres_db_prod:
    container_name: subtiter-postgres-db-prod
    image: postgres:14-alpine
    restart: always
    ports:
      - "5433:5433"
    environment:
      POSTGRES_USER: subtiteruser_prod
      POSTGRES_PASSWORD: subtiter_qazwsxqazwsx_prod
      POSTGRES_DB: subtiter_prod
      PGPORT: 5433
    volumes:
      - postgres_data_prod:/var/lib/postgresql/data
    networks:
      - app_network

  postgres_db:
    container_name: subtiter-postgres-db
    image: postgres:14-alpine
    restart: always
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: subtiteruser
      POSTGRES_PASSWORD: subtiter_qazwsxqazwsx
      POSTGRES_DB: subtiter_test
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - app_network

volumes:
  postgres_data:
    driver: local
  postgres_data_prod:
    driver: local

networks:
  app_network:
    driver: bridge 
